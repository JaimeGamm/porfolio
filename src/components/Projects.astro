---
import NextJS from '../components/icons/NextJS.astro';
import Tailwind from '../components/icons/Tailwind.astro';
import LinkButton from '../components/LinkButton.astro'; 
import GitHub from '../components/icons/GitHub.astro';

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}

const PROJECTS = [
    {
        title: 'Trinsk',
        description: 'Trinsk es una aplicativo web que recopila y analiza datos otorgados por la alcaldía de medellín , que permite identificar riesgosidad, zonas de gran accidentalidad de tráfico y visualización de data, que permite a cualquier usuario con conexión de internet utilizarlo para el uso personal e informativo que entrega el aplicativo. Este aplicativo, cuenta con una vista para celular y computadora , que se ajusta a las resoluciones de la pantalla, otorgando mejores diseños y una mejor experiencia de usuario.',
        link: '#',
        gitHub: '#',
        image: 'src/images/thinks.png',
        tags: [TAGS.NEXT,TAGS.TAILWIND]
    }
]
---
<section class="flex flex-col gap-y-16">
{
    PROJECTS.map(({image, title, description, tags,gitHub,link}) => (
        <article>
            <h3 class ="text-2xl from-semibold text-yellow-200 mb-2">{title}</h3>
            <p class ="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) => (
                <li>
                    <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                    >
                        <tag.icon class="size-4" />
                        {tag.name}
                    </span>
                </li>
                ))}
            </ul>
            <img 
            class="rounded shadow-2xl shadow-white/20"
            src={image} alt={`Captura de pantalla del proyecto ${image}`}/>   
            <footer class="flex gap-x-2 items-end mt-4" >
                {gitHub && <LinkButton href={gitHub}>
                    VER CODIGO FUENTE
                    <GitHub class="size-6"/>
                </LinkButton>
                }
                {link && <LinkButton href={link}>
                    IR A SITIO VERZ
                    <svg xmlns="http://www.w3.org/2000/svg" 
                     width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" /><path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" /><path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" /><path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" /><path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" /><path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" /><path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" /><path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" /><path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" /></svg>
                </LinkButton>
                }
            </footer>
        </article>    
    ))
}
</section>